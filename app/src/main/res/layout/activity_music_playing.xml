<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".music_playing"
    android:background="#272727">


    <!-- Кнопка "Назад" -->
    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/back"
        android:scaleType="fitXY"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Назад"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="9dp" />

    <!-- Название альбома / плейлиста -->
    <TextView
        android:id="@+id/album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album / playlist name"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:fontFamily="@font/kodchasan_extralight"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="35dp" />

    <!-- Изображение альбома -->
    <ImageView
        android:id="@+id/album_image"
        android:layout_width="0dp"
        android:layout_height="371dp"
        android:src="@mipmap/image"
        android:scaleType="fitXY"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@id/album_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="11dp"
        android:layout_marginTop="40dp" />

    <!-- Название трека -->
    <TextView
        android:id="@+id/trackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Name"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@id/album_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp" />

    <!-- Имя автора -->
    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author name"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@id/trackName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="10dp" />

    <!-- SeekBar (ползунок) -->
    <SeekBar
        android:id="@+id/seek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/custom_seekbar"
        android:thumb="@drawable/custom_thumb"
        app:layout_constraintTop_toBottomOf="@id/author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp" />

    <!-- Текущее время трека -->
    <TextView
        android:id="@+id/current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/seek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="56dp" />

    <!-- Панель управления воспроизведением -->
    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="448dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/current"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="60dp"
        android:paddingVertical="11dp">

        <!-- Кнопка повтора -->
        <ImageView
            android:id="@+id/repeat"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:src="@mipmap/replay"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.4"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Повтор" />

        <!-- Кнопка перемотки назад -->
        <ImageView
            android:id="@+id/prev"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:src="@mipmap/preview"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Перемотка назад" />

        <!-- Кнопка паузы -->
        <ImageView
            android:id="@+id/pause"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:src="@mipmap/pause2"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Пауза" />

        <!-- Кнопка перемотки вперед -->
        <ImageView
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:src="@mipmap/next"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Перемотка вперед" />

        <!-- Кнопка "Лайк" -->
        <ImageView
            android:id="@+id/like"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/heart"
            android:layout_weight="0.4"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Лайк" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>