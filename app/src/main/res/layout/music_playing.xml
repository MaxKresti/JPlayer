<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/rb3pljaa6bd9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#272727">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/r253dmoyei69"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="9dp"
                android:src="@mipmap/back"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/ro5g4krwob3h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="35dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rms36irzqz9"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kodchasan_extralight"
                    android:layout_width="wrap_content"
                    android:text="Album / playlist name" />
            </LinearLayout>

            <ImageView
                android:id="@+id/rm0xohukbjsm"
                android:layout_width="match_parent"
                android:layout_height="371dp"
                android:layout_marginBottom="40dp"
                android:layout_marginHorizontal="11dp"
                android:src="@mipmap/image"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/rb9eha9brqh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rzz499h0bg2q"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Track Name" />
            </LinearLayout>

            <TextView
                android:id="@+id/rpwjni06ud2"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="190dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Author name" />

            <!-- Добавленный SeekBar (ползунок) -->
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="20dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/custom_seekbar"
                android:thumb="@drawable/custom_thumb" />

            <LinearLayout
                android:id="@+id/r9m7qf6re9qt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="56dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rq4ckg9kwsu"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="00:00" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rnxqz4p2h828"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingVertical="11dp"
                android:layout_marginBottom="60dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <!-- Пустое пространство слева для выравнивания -->
                <ImageView
                    android:id="@+id/rgtnsaodm8x"
                    android:layout_width="26dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/replay"
                    android:scaleType="fitXY" />
                <!-- Кнопка перемотки назад -->
                <ImageView
                    android:id="@+id/r4wsqad04sr"
                    android:layout_width="70dp"
                    android:layout_height="39dp"
                    android:layout_marginEnd="30dp"
                    android:src="@mipmap/preview"
                    android:scaleType="fitXY" />

                <!-- Кнопка паузы -->
                <ImageView
                    android:id="@+id/r4wsqad04srm"
                    android:layout_width="70dp"
                    android:layout_height="39dp"
                    android:layout_marginEnd="15dp"
                    android:src="@mipmap/pause2"
                    android:scaleType="fitXY" />

                <!-- Кнопка перемотки вперед -->
                <ImageView
                    android:id="@+id/r4wsqad04s"
                    android:layout_width="70dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/next"
                    android:scaleType="fitXY" />

                <!-- Пустое пространство справа для выравнивания -->

                <!-- Дополнительная иконка (если нужна) -->
                <ImageView
                    android:id="@+id/rgtnsaodm8xc"
                    android:layout_width="26dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/heart"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/renj1pg3o24m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingVertical="8dp"
                android:layout_marginBottom="18dp"
                android:layout_marginHorizontal="78dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/playlists"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="More of this author"
                    android:textSize="24dp"
                    android:backgroundTint="#9C27B0"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>