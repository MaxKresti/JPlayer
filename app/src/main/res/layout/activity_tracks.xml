<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_new"
    android:background="#272727">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#272727"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:fontFamily="@font/kodchasan"
            android:textSize="40dp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="MY MEDIA" />

        <!-- Tabs: Tracks, Albums, Playlists -->
        <LinearLayout
            android:id="@+id/tabsContainer"
            android:layout_marginLeft="-45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Tracks"
                android:id="@+id/tracksButton"
                style="@style/Button"
                android:backgroundTint="#9C27B0" />

            <Button
                android:text="Albums"
                android:id="@+id/albumsButton"
                style="@style/Button" />

            <Button
                android:text="Playlists"
                android:id="@+id/playlistsButton"
                style="@style/Button" />
        </LinearLayout>

        <!-- Search Bar -->
        <LinearLayout
            android:id="@+id/searchBarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/rounded_background"
            android:orientation="horizontal"
            android:padding="14dp">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:scaleType="fitXY"
                android:src="@mipmap/lupa" />

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="   Search tracks..."
                android:textColor="#FFFFFF"
                android:textColorHint="#A0A0A0"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:maxLines="1"/>
        </LinearLayout>

        <!-- MY PLAYLISTS Title -->
        <TextView
            android:id="@+id/playlistsTitle"
            android:fontFamily="@font/kodchasan"
            android:textSize="32dp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="MY TRACKS" />

        <!-- Top Line -->
        <View
            android:id="@+id/topDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF" />

        <!-- ScrollView for Tracks -->
        <ScrollView
            android:id="@+id/tracksScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#272727">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/tracksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    tools:ignore="MissingConstraints">

                    <!-- Track 1 -->
                    <include
                        layout="@layout/item_track"
                        android:id="@+id/track1" />

                    <!-- Track 2 -->
                    <include
                        layout="@layout/item_track"
                        android:id="@+id/track2" />

                    <!-- Track 3 -->
                    <include
                        layout="@layout/item_track"
                        android:id="@+id/track3" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <!-- Bottom Line -->
        <View
            android:id="@+id/bottomDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF" />
    </LinearLayout>

    <!-- Compact Player -->
    <include
        android:id="@+id/compact_player"
        layout="@layout/compact_player"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="@style/BottomNavigationTransparent"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@drawable/bottom_nav_colors"
        app:itemTextColor="@drawable/bottom_nav_colors"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>