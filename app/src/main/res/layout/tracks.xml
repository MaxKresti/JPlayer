<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_new"
    android:background="#272727">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#272727">

        <!-- Title -->
        <TextView
            android:id="@+id/r9tnqpwzntbg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/kodchasan_extralight"
            android:text="MY MEDIA"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <!-- Tabs: Tracks, Albums, Playlists -->
        <LinearLayout
            android:layout_width="480dp"
            android:layout_height="50dp">

            <Button
                android:id="@+id/tracks"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Tracks"
                android:textSize="20dp"
                android:backgroundTint="#9C27B0"
                android:textColor="#FFFAFA" />

            <Button
                android:id="@+id/albums"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="0"
                android:text="Albums"
                android:textSize="20dp"
                android:backgroundTint="#808080"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/playlists"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Playlists"
                android:textSize="18dp"
                android:layout_marginLeft="30dp"
                android:backgroundTint="#808080"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Search Bar -->
        <LinearLayout
            android:id="@+id/rqgfxw4zngz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/rounded_background"
            android:orientation="horizontal"
            android:padding="14dp">

            <ImageView
                android:id="@+id/r4rnb7lthk05"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:scaleType="fitXY"
                android:src="@mipmap/lupa" />

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="   Search tracks..."
                android:textColor="#FFFFFF"
                android:textColorHint="#A0A0A0"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:maxLines="1"/>
        </LinearLayout>

        <!-- MY TRACKS Title -->
        <TextView
            android:id="@+id/r9t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/kodchasan_extralight"
            android:text="MY TRACKS"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <!-- Top Line -->
        <View
            android:id="@+id/topLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF" />

        <!-- ScrollView for Tracks -->
        <ScrollView
            android:id="@+id/scrollViewTracks"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:background="#272727">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Track 1 -->
                <LinearLayout
                    android:id="@+id/track1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/track1Image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/image"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/track1Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Track 1"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/track1Rubric"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rubric name"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Three Dots Button -->
                    <ImageView
                        android:id="@+id/track1Menu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        android:src="@mipmap/three"
                        android:scaleType="fitXY"
                     />
                </LinearLayout>

                <!-- Track 2 -->
                <LinearLayout
                    android:id="@+id/track2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/track2Image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/image"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/track2Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Track 2"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/track2Rubric"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rubric name"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Three Dots Button -->
                    <ImageView
                        android:id="@+id/track2Menu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        android:src="@mipmap/three"
                        android:scaleType="fitXY"
                       />
                </LinearLayout>

                <!-- Track 3 -->
                <LinearLayout
                    android:id="@+id/track3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/track3Image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/image"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/track3Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Track 3"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/track3Rubric"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rubric name"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Three Dots Button -->
                    <ImageView
                        android:id="@+id/track3Menu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        android:src="@mipmap/three"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>

                <!-- Track 4 -->
                <LinearLayout
                    android:id="@+id/track4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/track4Image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/image"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/track4Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Track 4"
                            android:textColor="#FFFFFF"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/track4Rubric"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rubric name"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Three Dots Button -->
                    <ImageView
                        android:id="@+id/track4Menu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        android:src="@mipmap/three"
                        android:scaleType="fitXY"
                         />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Bottom Line -->
        <!-- Bottom Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF" />

        <!-- Bottom Navigation Icons -->
        <LinearLayout
            android:id="@+id/r3mxsasg9szc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="0dp">

            <!-- Icons Row -->
            <LinearLayout
                android:id="@+id/rm6mlya3lmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="50dp"
                android:weightSum="3">

                <!-- Home Icon -->
                <ImageView
                    android:id="@+id/r5ltq7yf6zxd"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@mipmap/home"
                    android:gravity="center"/>

                <!-- Media Icon -->
                <ImageView
                    android:id="@+id/r7n4q6fbh4w"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@mipmap/media_open"
                    android:gravity="center"/>

                <!-- Plus Icon -->
                <ImageView
                    android:id="@+id/rh4ffxlei885"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@mipmap/plus"
                    android:gravity="center"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>