<resources>



        <!-- Базовый стиль для BottomNavigationView -->
        <style name="BottomNavigationTransparent" parent="Widget.MaterialComponents.BottomNavigationView">
            <item name="backgroundTint">@android:color/transparent</item> <!-- Прозрачный фон -->
            <item name="itemIconTint">@drawable/bottom_nav_colors</item> <!-- Цвет иконок -->
            <item name="itemTextColor">@drawable/bottom_nav_colors</item> <!-- Цвет текста -->
            <item name="itemRippleColor">@color/purple_200</item> <!-- Цвет ripple-эффекта -->
            <item name="labelVisibilityMode">labeled</item> <!-- Показывать текст под иконками -->
        </style>

        <!-- Стиль для иконок -->
        <style name="IconButton">
            <item name="android:layout_width">40dp</item>
            <item name="android:layout_height">40dp</item>
            <item name="android:gravity">center</item>
            <item name="android:scaleType">fitXY</item> <!-- Опционально, если нужно масштабировать изображение -->
        </style>

        <!-- Стиль для активной иконки (например, media_open) -->
        <style name="IconButton.Active">
            <item name="android:tint">#FFFFFF</item> <!-- Пример цвета для активной иконки -->
        </style>

        <!-- Стиль для неактивной иконки -->
        <style name="IconButton.Inactive">
            <item name="android:tint">#A0A0A0</item> <!-- Пример цвета для неактивной иконки -->
        </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">114dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textSize">17sp</item>
        <item name="android:backgroundTint">#7A7A7A</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>