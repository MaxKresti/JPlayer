<resources>
    <!-- Базовый стиль для BottomNavigationView -->
    <style name="BottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Цвет фона -->
        <item name="android:background">#FFFFFF</item>
        <item name="itemIconTint">@drawable/bottom_nav_colors</item>
        <item name="itemTextColor">@drawable/bottom_nav_colors</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:background">@drawable/image_button_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="SettingItemStyle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>