<!-- res/drawable/custom_seekbar.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Фон полосы (неактивная часть) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" /> <!-- Закругленные углы -->
            <solid android:color="#CCCCCC" /> <!-- Цвет фона -->
            <size android:height="4dp" /> <!-- Высота полосы -->
        </shape>
    </item>

    <!-- Прогресс (активная часть) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="4dp" /> <!-- Закругленные углы -->
                <solid android:color="#9C27B0" /> <!-- Цвет прогресса -->
                <size android:height="4dp" /> <!-- Высота полосы -->
            </shape>
        </clip>
    </item>
</layer-list>