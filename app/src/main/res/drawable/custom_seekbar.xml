<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Фон полосы (неактивная часть) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" /> <!-- Закругленные углы -->
            <solid android:color="#4D4D4D" /> <!-- Цвет фона -->
            <size android:height="2dp" /> <!-- Высота полосы (тонкая) -->
        </shape>
    </item>

    <!-- Прогресс (активная часть) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="2dp" /> <!-- Закругленные углы -->
                <solid android:color="#EC0EFF" />
                <size android:height="2dp" />
            </shape>
        </clip>
    </item>
</layer-list>